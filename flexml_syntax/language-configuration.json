{
    "comments": {
        "lineComment": "'//"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" }
    ],
    "surroundingPairs": [
        { "open": "\"", "close": "\"" },
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" }
    ],
    "onEnterRules": [
        {
            "beforeText": "^\\s*//",
            "action": { "indentAction": "none", "indent": "none", "appendText": "'// " }
        }
    ]
}
